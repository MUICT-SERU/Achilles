{
  "compilerOptions": {
    "target": "ESNEXT",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "baseUrl": "./src",
    "typeRoots": [
      "./src/types/**/*"
    ],
    "paths": {
      "app/*": ["*"],
      "assets/*": ["assets/*"],
      "core/*": ["core/*"],
      "components/*": ["components/*"],
      "containers/*": ["containers/*"],
      "ducks/*": ["redux/modules/*"],
      "hooks/*": ["hooks/*"],
      "lib/*": ["lib/*"],
      "pages/*": ["pages/*"],
      "routes/*": ["routes/*"],
      "styled/*": ["components/styled/*"],
      "styles/*": ["styles/*"],
      "themes/*": ["themes/*"],
      "types/*": ["types/*"],
      "utils/*": ["utils/*"],
      "vars/*": ["vars/*"]
    }
  },
  "include": [
    "src"
  ]
}
